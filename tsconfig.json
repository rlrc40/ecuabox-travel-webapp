{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/components/*"],
      "@/hooks": ["src/hooks/*"],
      "@/services": ["src/services/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
